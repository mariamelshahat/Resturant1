@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "_HomeLayout";
}

<section class="book_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Login
            </h2>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="form_container">
                    <form id="account" method="post">
                        <h2>Use a local account to log in</h2>
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <!-- Email Input -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" placeholder="Enter your email" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.Email" class="styled-label">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- Password Input -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" placeholder="Enter your password" autocomplete="current-password" aria-required="true" />
                            <label asp-for="Input.Password" class="styled-label">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <!-- Remember Me (Fixed Layout) -->
                        <div class="form-check mb-3">
                            <input asp-for="Input.RememberMe" class="form-check-input" />
                            <label asp-for="Input.RememberMe" class="form-check-label styled-label">Remember Me</label>
                        </div>

                        <!-- Submit Button -->
                        <div class="btn_box d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Log in</button>
                            <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Register", "Account")'">
                                Back to Register
                            </button>
                        </div>

                        <!-- Forgot Password & Other Links -->
                        <div class="form-group mt-3">
                            <p><a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></p>
                            <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></p>
                            <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .styled-label {
        font-size: 1.25rem;
        font-weight: 600;
        color: #333;
        text-transform: uppercase;
        letter-spacing: 0.05rem;
        margin-bottom: 10px;
    }

    .form-control {
        padding: 12px;
        font-size: 1rem;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    .btn_box {
        margin-top: 20px;
    }

    .form-check-input {
        margin-right: 10px;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
