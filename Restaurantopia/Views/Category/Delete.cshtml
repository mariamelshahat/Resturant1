<style>
    .cont {
        padding: 30px;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
    }

    .heading_container h2 {
        font-size: 1.75rem;
        font-weight: bold;
        color: #333;
    }

    dl {
        margin-top: 20px;
    }

    .row {
        margin-top: 20px;
    }

    .btn_box {
        margin-top: 20px;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        padding: 10px 20px;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        padding: 10px 20px;
    }
</style>
