@model Restaurantopia.Entities.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "_HomeLayout";
}

<section class="book_section layout_padding">
    <div class="cont">
        <div class="heading_container">
            <h2>Delete Category</h2>
        </div>

        <div class="row">
            <div class="col-md-4">
                <h3 class="text-danger">Are you sure you want to delete this?</h3>
                <div class="form_container">
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Id)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Id)
                        </dd>

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.CategoryName)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.CategoryName)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <div class="btn_box d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("ListOfCategories")'">
                                Back To Menu
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

