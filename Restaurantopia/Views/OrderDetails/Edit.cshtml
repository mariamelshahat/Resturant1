@model Restaurantopia.Entities.Models.OrderDetails

@{
    ViewData["Title"] = "Edit Order Details";
    // Layout = "_MenuLayout";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

<style>
    /* Button styles with hover animations */
    .btn {
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: scale(1.05); /* Slightly increase button size on hover */
        }

    .btn-primary i {
        margin-right: 5px; /* Space between the icon and the text */
    }

    .btn-secondary i {
        margin-right: 5px; /* Space between the icon and the text */
    }
</style>

<div class="heading-section ftco-animate mb-5 text-center">
    <span class="subheading">Cart</span>
    <h2 class="mb-4">Edit Order Details</h2>
</div>

<hr />

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title"> @Model.Item.ItemTitle</h5>

                <div class="form-group">
                    <p>@Model.Item.ItemDescription</p>
                </div>

                <div class="form-group">
                    <p>Price: $@String.Format( "{0:0.00}", Model.Item.ItemPrice )</p>
                </div>

                <div class="form-group">
                    <img id="output" src="@Url.Content(Model.Item.ItemImage ?? "/images/default-placeholder.png")" alt="Item Image" width="200px" />
                </div>

                <form asp-action="Edit" enctype="multipart/form-data">
                    @Html.HiddenFor( model => model.Id ) <!-- Include the Order ID -->

                    <div class="row">
                        <div class="col-md-6">
                            <!-- Quantity Field -->
                            <div class="form-group">
                                <label asp-for="Quantity" class="control-label">Quantity</label>
                                <input asp-for="Quantity" class="form-control" placeholder="Enter quantity" />
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mt-4 text-center">
                        <!-- Save Button -->
                        <button type="submit" class="btn btn-primary mt-2">
                            <i class="fas fa-save"></i> Save
                        </button>
                        <!-- Back Button -->
                        <a asp-action="Index" class="btn btn-secondary mt-2">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    // Add a n y custom JavaS c ript here if necessary
</script>
