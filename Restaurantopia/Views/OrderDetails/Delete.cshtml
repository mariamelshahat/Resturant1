@model OrderDetails

@{
    ViewData["Title"] = "Delete";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

<style>
    /* Button styles with hover animations */
    .btn {
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: scale(1.05); /* Slightly increase button size on hover */
        }

    .btn-danger i {
        margin-right: 5px; /* Space between the icon and the text */
    }

    .btn-secondary i {
        margin-right: 5px; /* Space between the icon and the text */
    }
</style>

<div class="heading-section ftco-animate mb-5 text-center">
    <span class="subheading">Cart</span>
    <h2 class="mb-4">Delete Order Detail</h2>
</div>

<h3 class="text-center">Are you sure you want to delete this order?</h3>
<hr />

<div class="row justify-content-center">
    <div class="col-md-8">
        <!-- Card for Order Details -->
        <div class="card h-100 shadow-sm">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <!-- Dynamically display the item image, if applicable -->
                    <img src="@Url.Content(Model.Item?.ItemImage ?? "~/images/default-placeholder.png")"
                         alt="Item Image"
                         class="card-img"
                         style="object-fit: cover; height: 100%;"
                         onerror="this.onerror=null; this.src='~/Images/default-placeholder.png';" />
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@Model.Item?.ItemTitle</h5>
                        <dl class="row">
                            <dt class="col-sm-4">Quantity</dt>
                            <dd class="col-sm-8">@Model.Quantity</dd>
                            <dt class="col-sm-4">Total Price</dt>
                            <dd class="col-sm-8">@String.Format( "${0:0.00}", Model.Total )</dd>
                            <dt class="col-sm-4">Date</dt>
                            <dd class="col-sm-8">@Model.Date</dd>
                        </dl>

                        <form asp-action="Delete" method="post">
                            <!-- Hidden input to pass the order detail ID -->
                            <input type="hidden" asp-for="Id" />

                            <div class="text-center mt-4">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                                <span class="mx-2">|</span>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Back to Cart
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
