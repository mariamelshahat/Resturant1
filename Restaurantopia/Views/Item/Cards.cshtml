@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> signInManager;
@model IEnumerable<Restaurantopia.Entities.Models.Item>

@foreach (var item in Model)
{
    <div class="card mb-3 col-md-4">
        <div class="card-header">
            <h5>@item.ItemTitle</h5>
            <h6>Category : @item.Category.CategoryName / Price : @item.ItemPrice / Description : @item.ItemDescription</h6>
        </div>
        <div class="card-body">
            @if (item.ItemImage == null || item.ItemImage == "")
            {

                <img src="\Images\ItemImage\no-image.webp" alt="NOImage" width="100%" height="100%" />
            }
            else
            {
                <img src="@item.ItemImage" alt="NOImage" width="100%" height="100%" />
            }
        </div>
       
        
            <div class="card-footer text-center">
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })|
            @Html.ActionLink("Order", "Order", new { id = item.Id })
            </div>
        

    </div>
}